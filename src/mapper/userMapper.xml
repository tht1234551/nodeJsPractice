<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapper">
    <select id="getNow">
        select NOW() now
    </select>

    <select id="calc">
        select 1 + 1
    </select>

    <select id="selectAll">
        SELECT num, nick_name, email, password
        FROM USER
    </select>

    <select id="select">
        SELECT num, nick_name, email, password
        FROM USER
        WHERE EMAIL = '${email}'
    </select>

    <insert id="insert">
        INSERT INTO USER
        VALUES (null,
                '${nickName}',
                '${email}',
                '${password}')
    </insert>

    <delete id="delete">
        delete
        FROM USER
        WHERE email = '${email}'
    </delete>

</mapper>